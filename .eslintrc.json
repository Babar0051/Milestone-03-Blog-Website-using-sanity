{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "next/core-web-vitals"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    // Customize ESLint rules as needed
    "semi": ["error", "always"], // Enforce semicolons
    "quotes": ["error", "single"], // Allow single quotes
    "@typescript-eslint/no-unused-vars": ["warn"], // Warn about unused variables
    "react/react-in-jsx-scope": "off", // Disable React in scope for Next.js
    "no-console": "warn" // Warn on console usage
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "@typescript-eslint/explicit-module-boundary-types": "off" // Disable explicit return type rule for TS
      }
    }
  ]
}
